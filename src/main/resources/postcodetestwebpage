    // Instance the tour
    var tour = new Tour({
      name: 'tour4',
      steps: theSteps,
      template: function(i, step) {
        return theTemplate.replace(/{i}/g, i+1);
      },
      onShown: function (tour) {
        jQuery(".popover-navigation ul li:eq("+ tour.getCurrentStep() +")").addClass("active");
        jQuery(".popover-navigation ul li.dot").click(function() { tour.goTo(jQuery(this).index()); });
      },
      onEnd: function (tour) {
        jQuery("html, body").animate({ scrollTop: 0 }, "slow");
        ga('send', {
          hitType: 'event',
          eventCategory: 'popoverTour',
          eventAction: 'close',
          eventValue: tour.getCurrentStep()
        });
      }
    });

    // Tour not on mobile
    if (adWidth > 767) {
      // Initialize the tour
      tour.init();


      // Start the tour
      if (/tour/.test(window.location.href)) {
        tour.start();
      }

      // Restart the tour
      if (/tourRestart/.test(window.location.href)) {
        tour.restart();
      }
    }
  </script>

